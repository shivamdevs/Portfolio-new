---
import Action from "./Action.astro";
---

<section class="swipper activity fade-slide-in">
    <div class="swiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide item">
                <div class="card">
                    <img class="imager" loading="lazy" srcset="/images/home/play-1.png" alt="" />
                    <div class="detail">
                        <div class="title">CodePlay: Editor</div>
                        <div class="content">
                            Edit your HTML, CSS and JS codes with live preview.
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide item">
                <div class="card">
                    <img class="imager" loading="lazy" srcset="/images/home/play-2.png" alt="" />
                    <div class="detail">
                        <div class="title">CodePlay: Player</div>
                        <div class="content">
                            Share your code to any one with play feature.
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide item">
                <div class="card">
                    <img class="imager" loading="lazy" srcset="/images/home/chat-2.png" alt="" />
                    <div class="detail">
                        <div class="title">Chat</div>
                        <div class="content">
                            Get into conversation with your friends or anyone.
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide item">
                <div class="card">
                    <img class="imager" loading="lazy" srcset="/images/home/chat-1.png" alt="" />
                    <div class="detail">
                        <div class="title">Chat: Search</div>
                        <div class="content">
                            Get suggestions, recent searches and many more.
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide item">
                <div class="card">
                    <img class="imager" loading="lazy" srcset="/images/home/task-1.png" alt="" />
                    <div class="detail">
                        <div class="title">Tasks</div>
                        <div class="content">
                            Keep track of your tasks from anywhere in the globe.
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide item">
                <div class="card container">
                    <Action
                        title="And many more!"
                        info="If you like what you see, there's more where that came from! Head over to my projects page to explore my other work."
                        text="View all Projects"
                        link="/project"
                    />
                </div>
            </div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>

<style>
    .swipper {
        margin-bottom: 10vh;
        margin-inline: auto;
        widows: 100%;
        max-width: 1000px;
    }
    .item {
        padding: 10px 55px;
        justify-content: center;
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
    }
    .card {
        width: 100%;
        height: 100%;
        border-radius: 10px;
        overflow: hidden;
        background-color: #020408;
        border: 3px solid rgba(30, 143, 255, 0.5);
    }
    .detail {
        padding: 20px;
    }
    .title {
        font-weight: 500;
        font-size: 25px;
        color: var(--logo-color);
        margin-bottom: 10px;
    }
    .content {
        color: #979daf;
        margin-bottom: 10px;
        font-size: 16px;
    }
    .container {
        padding: 10px;
        justify-content: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>

<script is:inline load:client>
    new Swiper(".swiper", {
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        pagination: {
            el: ".swiper-pagination",
            type: "bullets",
        },
        effect: "creative",
        creativeEffect: {
            limitProgress: 2,
            shadowPerProgress: true,
            progressMultiplier: 1,
            perspective: true,
            prev: {
                translate: ["-10%", 0, -200],
                rotate: [0, 0, -2],
                opacity: 0.8,
                scale: 1,
                shadow: true,
            },
            next: {
                translate: ["120%", 0, 0],
                rotate: [0, 0, 0],
                opacity: 1,
                scale: 1,
                shadow: false,
            },
        },
    });
</script>
