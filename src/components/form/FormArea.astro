---
    export interface Props {
        id?: string;
        label?: string;
        required?: boolean;
    }

    let { id,  label, required } = Astro.props as Props;

    let mandatory = required ? "*" : "";
---

<div class="group">
    <label for={id}>{label} <span>{mandatory}</span></label>
    <textarea id={id} required={required}></textarea>
</div>

<style>
    .group {
        width: 100%;
        position: relative;
    }
    label {
        position: absolute;
        inset: 10px 0 auto 0;
        display: block;
        width: 100%;
        padding: 0 20px 10px;
        font-size: 16px;
        color: #727888;
    }
    textarea {
        width: 100%;
        position: relative;
        z-index: 1;
        min-height: 250px;
        max-height: 600px;
        padding: 40px 20px 10px;
        border-radius: 6px;
        background: none;
        resize: vertical;
        outline: none;
        border: 2px solid #343a4c;
    }

    label:has(+ textarea:focus) {
        color: var(--logo-color);
    }

    label > span {
        color: red;
    }

    textarea:focus {
        border-color: var(--logo-color);
    }
</style>